extends ../layouts/layout
block content
    main.has-margin.has-padding
        .section
        .has-slight-radius.has-background-black.shadowed.has-padding
            .section
                .is-flex.is-row-flexed.is-centered-flex
                    .is-flex.is-col-flexed.is-flexed-to-start
                        h2.title.is-3.is-serif.has-text-centered Joey: Junior App Developer
                        h3.subtitle.is-5.has-text-centered
                            | Security Bootcamp Dip.
                            <br/> @Coderacademy
                    .has-padding.has-margin
                        figure.image.img-size
                            img.is-rounded.shadowed(
                                src="../res/profile.png"
                                alt="profile pic")
                pre.shadowed.disable-selection.has-margin
                    code
                        | const site_map = () =&gt; {
                        |   return {
                        |     about: <a class="has-text-light" href="./about"+ext> () =&gt; about </a>,
                        |     blog: <a class="has-text-light" href="./blog"+ext> () =&gt; blog </a>,
                        |     projects: <a class="has-text-light" href="./projects"+ext> () =&gt; projects </a>,
                        |     contact: <a class="has-text-light", href='./'+`about${ext}#contact`> () =&gt; contact </a>,
                        |   };
                        | };
                        | const roles = () =&gt; {
                        |   return [
                        |     'Full-Stack',
                        |     'Server Stack and API Development',
                        |     'Linux / Windows',
                        |     'Scripting',
                        |     'Security and Testing',
                        |     'Front-End Design'
                        |     ];
                        |};
            .section
    script(
        src="../res/js/highlight.js" defer
    )
