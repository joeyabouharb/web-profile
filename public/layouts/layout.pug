doctype html
html(lang="en")
    head
        title #{title}
        meta(
            charset="UTF-8"
        )
        meta(
            name="Description"
            content=description
        )
        link(
            href="https://fonts.googleapis.com/css?family=PT+Mono%7CMerriweather%7CMontserrat&display=auto"
            rel="stylesheet"
            type="text/css"
        )

        link(
                href="../res/sass/index.sass"
                type="text/css"
                rel="stylesheet"
        )
        link(
            rel="manifest" href="../manifest.webmanifest"
        )
        meta(
            name="viewport"
            content="width=device-width, initial-scale=1"
        )
        meta(
            http-equiv="Content-Security-Policy"
            content="default-src 'self'; "+
                "style-src 'self' https://fonts.googleapis.com; "+
                "script-src 'self'; "+
                "font-src 'self' https://fonts.gstatic.com; "+
                "img-src 'self' https://cdn.jsdelivr.net;"
        )
    body.has-background-dark
        .hero.is-fullheight.is-dark
            include ../includes/header
            block content
            include ../includes/footer
        script(src="../res/js/header.js")